{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".output/**", "build/**", "dist/**"]
    },
    "serve": {
      "cache": false
    },
    "lint": {
      "outputs": []
    }
  }
}
