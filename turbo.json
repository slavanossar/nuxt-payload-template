{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [],
  "pipeline": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "env": ["DOMAIN", "SITE_NAME", "NEXT_PUBLIC_PAYLOAD_API_ROUTE"]
    },
    "nuxt#build": {
      "dependsOn": ["^build"],
      "outputs": [".output/**"],
      "env": ["NITRO_HOST", "NITRO_PORT"]
    },
    "payloadcms#build": {
      "dependsOn": ["^build"],
      "outputs": ["build/**", "dist/**"],
      "env": ["PORT", "DATABASE_NAME", "PAYLOAD_SECRET"]
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "generate": {
      "cache": false
    },
    "payloadcms#generate": {
      "outputs": ["types.d.ts"]
    },
    "nuxt#generate": {
      "dependsOn": ["payloadcms#generate"],
      "outputs": ["graphql/index.js", "graphql/possibleTypes.json"]
    },
    "regenerate-image-sizes": {
      "cache": false
    },
    "lint": {},
    "format": {}
  }
}
